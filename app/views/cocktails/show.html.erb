<h1>Cocktails#show</h1>
<% @cocktail.doses.each do |dose| %>
  <h2>Ingredient : <%= dose.ingredient.name %></h2>
  <h2>decription : <%= dose.description %></h2>
  <%= link_to 'Delete dose', dose_path(dose), method: :delete %>
<% end %>
